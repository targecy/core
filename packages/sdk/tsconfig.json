{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": ["."],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["../sdk/src/*"],
      "@backend/*": ["../backend/src/*"],
      "@relayer/*": ["../relayer/src/*"],
      "@common/*": ["../common/src/*"]
    }
  },

  "include": ["src", "codegen.ts", "apollo.config.js"],
  "exclude": [
    "**/node_modules",
    "**/node_modules/**/*",
    ".husky",
    "**/*.css",
    "tailwind.config.js",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*",
    "@0xpolygonid/js-sdk"
  ]
}
