{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": ["."],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~~/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@targecy/sdk": ["../sdk/src"],
      "~common/*": ["../common/src/*"]
    }
  },
  "include": ["src", "codegen.ts", "apollo.config.js"],
  "exclude": [
    "**/node_modules/**/*",
    "**/public/**/*",
    ".husky",
    "**/*.css",
    "tailwind.config.js",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*",
    "../backend/**/*",
    "../relayer/node_modules/**/*"
  ]
}
