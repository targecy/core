{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "ethers", "chai", "mocha"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"],
      "~helpers/*": ["./helpers/*"],
      "~contracts/*": ["./contracts/*"],
      "~tests/*": ["./tests/*"],
      "~generated/*": ["./generated/*"],
      "~scripts/*": ["./scripts/*"],
      "~tasks/*": ["./tasks/*"],
      "@common/*": ["../common/src/*"],
      "@backend/*": ["../backend/src/*"]
    }
  },
  "include": ["types", "scripts", "tests", "helpers", "./hardhat.config.ts", "deploy", "tasks", "scripts", "../common/tsconfig.json"],
  "exclude": ["**/node_modules", "node_modules"],
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    },
    "moduleTypes": {
      "**/*": "cjs"
    }
  }
}
