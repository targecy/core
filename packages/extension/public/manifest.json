{
  "manifest_version": 3,

  "name": "Targecy Extension",
  "description": "Targecy extension for tracking and rewards.",
  "version": "1.0",

  "options_ui": {
    "page": "popup.html"
  },

  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
