{
  "name": "@scaffold-eth/typescript",
  "version": "0.4.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "start-services": "yarn workspace @scaffold-eth/services start-all",
    "stop-services": "yarn workspace @scaffold-eth/services stop-all",
    "restart-services": "yarn workspace @scaffold-eth/services restart-all",
    "deploy-contracts": "rm -rf ./packages/solidity-ts/generated && yarn workspace @scaffold-eth/solidity deploy:hardhat && yarn workspace @scaffold-eth/solidity deploy:hardhat:post",
    "deploy-subgraph": "yarn workspace @scaffold-eth/subgraph remove-unsupported-array && sh ./packages/subgraph/create-subgraph.sh && yarn workspace @scaffold-eth/subgraph create-local && yarn workspace @scaffold-eth/subgraph codegen && yarn workspace @scaffold-eth/subgraph build && sh ./packages/subgraph/deploy-local.sh",
    "dev-dapp": "yarn workspace @targecy/webapp dev",
    "start-dapp": "yarn workspace @targecy/webapp start",
    "migrate-backend": "yarn workspace @targecy/backend prisma:migrate:dev",
    "start-backend": "yarn workspace @targecy/backend dev",
    "start-relayer": "yarn workspace @targecy/relayer dev",
    "show-accounts": "yarn workspace @scaffold-eth/services show-accounts"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "shx": "^0.3.4",
    "syncpack": "^8.2.4",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "packages/services/trpc-panel/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/trpc-panel lint --fix",
      "yarn workspace @targecy/trpc-panel format"
    ],
    "packages/webapp-ts/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/webapp lint --fix",
      "yarn workspace @targecy/webapp format"
    ],
    "packages/common/src/**/*.{ts,tsx}": [
      "yarn workspace @scaffold-eth/common lint --fix",
      "yarn workspace @scaffold-eth/common format"
    ],
    "packages/commands/src/**/*.{ts,tsx}": [
      "yarn workspace @scaffold-eth/commands lint --fix",
      "yarn workspace @scaffold-eth/commands format"
    ],
    "packages/solidity-ts-ts/tests/**/*.ts": [
      "yarn workspace @scaffold-eth/solidity lint --fix",
      "yarn workspace @scaffold-eth/solidity format"
    ],
    "packages/solidity-ts-ts/helpers/**/*.ts": [
      "yarn workspace @scaffold-eth/solidity lint --fix",
      "yarn workspace @scaffold-eth/solidity format"
    ],
    "packages/solidity-ts-ts/tasks/**/*.ts": [
      "yarn workspace @scaffold-eth/solidity lint --fix",
      "yarn workspace @scaffold-eth/solidity format"
    ],
    "packages/solidity-ts-ts/deploy/**/*.ts": [
      "yarn workspace @scaffold-eth/solidity lint --fix",
      "yarn workspace @scaffold-eth/solidity format"
    ],
    "packages/solidity-ts-ts/**/*.sol": [
      "yarn workspace @scaffold-eth/solidity format",
      "yarn workspace @scaffold-eth/solidity solhint --fix"
    ]
  },
  "volta": {
    "node": "16.15.0"
  }
}
