{
  "name": "@targecy/monorepo",
  "version": "0.4.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "download-env-vars": "sh ./download-env-vars.sh",
    "download-env-vars:stg": "sh ./download-env-vars.sh stg",
    "download-env-vars:prod": "sh ./download-env-vars.sh prod",
    "start-services": "yarn workspace @targecy/services start-all",
    "start-explorer": "yarn workspace @targecy/services start-explorer",
    "stop-services": "yarn workspace @targecy/services stop-all",
    "localhost-from-zero": "yarn reset-services && yarn deploy-contracts && yarn deploy-subgraph && yarn seed:contracts:localhost:force && yarn dev-dapp",
    "setup": "yarn deploy-contracts && yarn deploy-subgraph && yarn migrate-backend",
    "seed": "yarn workspace @targecy/solidity seed && yarn workspace @targecy/backend prisma:seed",
    "seed:contracts:localhost:force": "yarn workspace @targecy/solidity seed:force",
    "seed:contracts:mumbai:force": "yarn workspace @targecy/solidity seed:mumbai:force",
    "restart-services": "yarn workspace @targecy/services restart-all",
    "reset-services": "yarn workspace @targecy/services reset-all",
    "reset": "echo 'RESETING ALL, kill it if you do not want to lose data. You have 10 seconds.' && sleep 10 && yarn reset-services && yarn setup",
    "deploy-contracts": "yarn workspace @targecy/solidity clean:deployments && yarn workspace @targecy/solidity deploy && yarn workspace @targecy/solidity deploy:post",
    "deploy-subgraph": "yarn workspace @targecy/subgraph setup-local",
    "deploy-subgraph:stg": "yarn workspace @targecy/subgraph setup-test",
    "deploy-subgraph:prod": "yarn workspace @targecy/subgraph setup-prod",
    "build-dapp": "yarn workspace @targecy/webapp build",
    "dev-dapp": "yarn workspace @targecy/webapp dev",
    "start-dapp": "yarn workspace @targecy/webapp start",
    "migrate-backend-dev": "yarn workspace @targecy/backend prisma:migrate:dev",
    "migrate-backend": "yarn workspace @targecy/backend prisma:migrate:prod",
    "build-backend": "yarn workspace @targecy/backend prisma:generate && yarn workspace @targecy/backend build",
    "start-backend": "yarn workspace @targecy/backend start",
    "dev-backend": "yarn workspace @targecy/backend dev",
    "migrate-relayer-dev": "yarn workspace @targecy/relayer prisma:migrate:dev",
    "migrate-relayer": "yarn workspace @targecy/relayer prisma:migrate:prod",
    "build-relayer": "yarn workspace @targecy/relayer prisma:generate && yarn workspace @targecy/relayer build",
    "start-relayer": "yarn workspace @targecy/relayer start",
    "dev-relayer": "yarn workspace @targecy/relayer dev",
    "show-accounts": "yarn workspace @targecy/services show-accounts"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": "18",
    "yarn": "4.0.2",
    "npm": "use-yarn"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "shx": "^0.3.4",
    "syncpack": "^8.2.4",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "packages/services/trpc-panel/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/trpc-panel lint --fix",
      "yarn workspace @targecy/trpc-panel format"
    ],
    "packages/webapp-ts/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/webapp lint --fix",
      "yarn workspace @targecy/webapp format"
    ],
    "packages/common/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/common lint --fix",
      "yarn workspace @targecy/common format"
    ],
    "packages/commands/src/**/*.{ts,tsx}": [
      "yarn workspace @targecy/commands lint --fix",
      "yarn workspace @targecy/commands format"
    ],
    "packages/solidity-ts-ts/tests/**/*.ts": [
      "yarn workspace @targecy/solidity lint --fix",
      "yarn workspace @targecy/solidity format"
    ],
    "packages/solidity-ts-ts/helpers/**/*.ts": [
      "yarn workspace @targecy/solidity lint --fix",
      "yarn workspace @targecy/solidity format"
    ],
    "packages/solidity-ts-ts/tasks/**/*.ts": [
      "yarn workspace @targecy/solidity lint --fix",
      "yarn workspace @targecy/solidity format"
    ],
    "packages/solidity-ts-ts/deploy/**/*.ts": [
      "yarn workspace @targecy/solidity lint --fix",
      "yarn workspace @targecy/solidity format"
    ],
    "packages/solidity-ts-ts/**/*.sol": [
      "yarn workspace @targecy/solidity format",
      "yarn workspace @targecy/solidity solhint --fix"
    ]
  },
  "volta": {
    "node": "16.15.0"
  }
}
